<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link rel="stylesheet" href="/css/layout.css">
        <link rel="stylesheet" href="/css/header.css">
        <link rel="stylesheet" href="/css/footer.css">
        <%- style %>
    </head>
    <body>
        <!-- calling the header -->
        <%- include('_header');%>
        <% if(flash.success && flash.success.length > 0){%>
            <h5>
                <%= flash.success %>
            </h5>
        <%}%>
        
        <main id="layout-main">
            <%- body %>
        </main>
        
        
        <!-- calling the footer -->
        <%- include('_footer');%>
        <%- script %>
    </body>
</html>