<header>
    <div id="header-name">
        <p>
        CODEIAL
            </p>

    <p>
    <!-- creating a sign out if logged in and sign in / up if not logged in - to display on website page accordingly -->
    <ul>
        <% if (locals.user){ %>
            <li>
                <a href="/users/profile">
                    <%= user.name %>
                </a>
            </li>
            <li>
                <a href="/users/sign-out">Sign Out</a>
            </li>
        <% }else{ %>

            <li>
                <a href="/users/sign-in">Sign In</a>
            </li>

            <li>
                <a href="/users/sign-up">Sign Up</a>
            </li>


        <% } %>
    </ul>
    </p>
</div>
</header>